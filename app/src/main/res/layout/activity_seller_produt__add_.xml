<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller_produt_Add_Activity">

    <ImageView
        android:id="@+id/seller_add_product_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="0dp"
        android:src="@drawable/mylap2" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/seller_add_layer1"
        android:layout_width="match_parent"
        android:layout_below="@+id/seller_add_product_image"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/seller_add_product_name"
            android:textColorHint="@color/colorPrimaryDark"
            android:padding="10dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="55dp"
            android:layout_width="match_parent"
            android:hint="Product Name"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/seller_add_layer2"
        android:layout_below="@+id/seller_add_layer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/product_add_description"
            android:textColorHint="@color/colorPrimaryDark"
            android:padding="10dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="55dp"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:hint="Product Description"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/seller_add_layer3"
        android:layout_below="@+id/seller_edit_layer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/seller_add_price"
            android:textColorHint="@color/colorPrimaryDark"
            android:padding="10dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="55dp"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:hint="Product Price"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_marginTop="50dp"
        android:id="@+id/seller_add_linear1"
        android:layout_below="@+id/seller_add_layer3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginLeft="90dp"
            android:background="@drawable/admin_input_design"
            android:text="@string/update1"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:gravity="center"
            android:background="@drawable/admin_input_design"
            android:textColor="@color/colorAccent"
            android:text="@string/add_product"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>