<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".AdminProductCategoryActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/admin_lap_2"
        />
    <TextView
        android:id="@+id/product_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/product_categories"
        android:textSize="25dp"
        android:layout_marginTop="230dp"
        android:textAlignment="center"

        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        />
    <LinearLayout
        android:id="@+id/admin_category_linearss1"
        android:layout_marginTop="300dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="@string/available_categories"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />
        <LinearLayout

            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <HorizontalScrollView
                android:background="@android:color/white"
                android:layout_width="wrap_content"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@android:color/white"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="110dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@android:color/white"
                            android:layout_marginBottom="10dp"
                            android:elevation="6dp"
                            card_view:cardCornerRadius="6dp"
                            android:layout_height="150dp">

                            <LinearLayout

                                android:background="@android:color/white"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/admin_edit_product_btn11"
                                    android:layout_width="wrap_content"
                                    android:layout_height="90dp"
                                    android:src="@drawable/mylap2"
                                    />
                                <TextView
                                    android:id="@+id/admin_edit_product1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@android:color/black"
                                    android:text="@string/laptops_ad"
                                    android:textSize="14sp"

                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:background="#d9d9d9"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="3dp"
                                    android:layout_height="1dp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                    <ImageButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="18dp"
                                        android:background="#fff"
                                        android:layout_weight="1"

                                        />
                                    <TextView
                                        android:layout_width="25dp"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="30dp"
                                        android:layout_weight="2"

                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="10sp"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>




                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="110dp"
                            android:background="@android:color/white"
                            android:layout_marginBottom="10dp"
                            android:elevation="6dp"
                            card_view:cardCornerRadius="6dp"
                            android:layout_height="150dp">

                            <LinearLayout
                                android:background="@android:color/white"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="90dp"
                                    android:src="@drawable/admin_phone1"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@android:color/black"
                                    android:text="@string/phones_ad"
                                    android:textSize="14sp"

                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:background="#d9d9d9"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="3dp"
                                    android:layout_height="1dp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                    <ImageButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="18dp"
                                        android:background="#fff"
                                        android:layout_weight="1"

                                        />
                                    <TextView
                                        android:layout_width="25dp"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="30dp"
                                        android:layout_weight="2"

                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="10sp"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>




                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="110dp"
                            android:background="@android:color/white"
                            android:layout_marginBottom="10dp"
                            android:elevation="6dp"
                            card_view:cardCornerRadius="6dp"
                            android:layout_height="150dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="138dp"
                                android:background="@android:color/white"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="90dp"
                                    android:src="@drawable/admin_television1" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/television_ad"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp"

                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="3dp"
                                    android:background="#d9d9d9" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="18dp"
                                        android:layout_weight="1"
                                        android:background="#fff"

                                        />

                                    <TextView
                                        android:layout_width="25dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="30dp"
                                        android:layout_weight="2"
                                        android:gravity="center"

                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="10sp" />

                                </LinearLayout>


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="110dp"
                            android:background="@android:color/white"
                            android:layout_marginBottom="10dp"
                            android:elevation="6dp"
                            card_view:cardCornerRadius="6dp"
                            android:layout_height="150dp">

                            <LinearLayout
                                android:background="@android:color/white"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="90dp"
                                    android:src="@drawable/admin_headphone1"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@android:color/black"
                                    android:text="@string/head_phones_ad"
                                    android:textSize="14sp"

                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:background="#d9d9d9"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="3dp"
                                    android:layout_height="1dp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                    <ImageButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="18dp"
                                        android:background="#fff"
                                        android:layout_weight="1"

                                        />
                                    <TextView
                                        android:layout_width="25dp"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="30dp"
                                        android:layout_weight="2"

                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="10sp"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>




                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="110dp"
                            android:background="@android:color/white"
                            android:layout_marginBottom="10dp"
                            android:elevation="6dp"
                            card_view:cardCornerRadius="6dp"
                            android:layout_height="150dp">

                            <LinearLayout
                                android:background="@android:color/white"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="90dp"
                                    android:src="@drawable/admin_glasses1"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@android:color/black"
                                    android:text="@string/modern_glasses"
                                    android:textSize="14sp"

                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:background="#d9d9d9"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="3dp"
                                    android:layout_height="1dp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                    <ImageButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="18dp"
                                        android:background="#fff"
                                        android:layout_weight="1"

                                        />
                                    <TextView
                                        android:layout_width="25dp"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="30dp"
                                        android:layout_weight="2"

                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="10sp"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>




                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="110dp"
                            android:background="@android:color/white"
                            android:layout_marginBottom="10dp"
                            android:elevation="6dp"
                            card_view:cardCornerRadius="6dp"
                            android:layout_height="150dp">

                            <LinearLayout
                                android:background="@android:color/white"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="90dp"
                                    android:src="@drawable/admin_camera_3"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@android:color/black"
                                    android:text="@string/cameras"
                                    android:textSize="14sp"

                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:background="#d9d9d9"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="3dp"
                                    android:layout_height="1dp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                    <ImageButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="18dp"
                                        android:background="#fff"
                                        android:layout_weight="1"

                                        />
                                    <TextView
                                        android:layout_width="25dp"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="30dp"
                                        android:layout_weight="2"

                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="10sp"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>




                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                </LinearLayout>


            </HorizontalScrollView>



        </LinearLayout>




    </LinearLayout>

    <Button
        android:id="@+id/admin_add_category_btn"
        android:layout_below="@+id/admin_category_linearss1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:background="@drawable/admin_input_design"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:text="@string/edit_category"

        />


</RelativeLayout>